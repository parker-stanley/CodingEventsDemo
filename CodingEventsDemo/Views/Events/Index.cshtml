@using CodingEventsDemo.Models;

@model List<Event>

@* The above two lines can also be written as follows:
    @model List<CodingEventsDemo.Models.Event>
*@

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>


<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@*Model is capitalized when used here but lowercase when declared*@
@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Description</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">Edit Events</a></td>
            </tr>
        }
    </table>
}

